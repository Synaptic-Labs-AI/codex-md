{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "moduleResolution": "bundler",
    "baseUrl": "src",
    "paths": {
      "$lib": ["./lib"],
      "$lib/*": ["./lib/*"],
      "$components": ["./lib/components"],
      "$components/*": ["./lib/components/*"],
      "$stores": ["./lib/stores"],
      "$stores/*": ["./lib/stores/*"],
      "$utils": ["./lib/utils"],
      "$utils/*": ["./lib/utils/*"]
    }
  },
  "include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.svelte"]
}
