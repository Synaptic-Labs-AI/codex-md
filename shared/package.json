{
  "name": "@codex-md/shared",
  "version": "1.0.0",
  "description": "Shared utilities for Codex MD",
  "type": "module",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs"
    },
    "./utils": {
      "import": "./dist/esm/utils/index.js",
      "require": "./dist/cjs/utils/index.cjs"
    },
    "./utils/files": {
      "import": "./dist/esm/utils/files/index.js",
      "require": "./dist/cjs/utils/files/index.cjs"
    },
    "./utils/markdown": {
      "import": "./dist/esm/utils/markdown/index.js",
      "require": "./dist/cjs/utils/markdown/index.cjs"
    },
    "./utils/conversion": {
      "import": "./dist/esm/utils/conversion/index.js",
      "require": "./dist/cjs/utils/conversion/index.cjs"
    },
    "./utils/web": {
      "import": "./dist/esm/utils/web/index.js",
      "require": "./dist/cjs/utils/web/index.cjs"
    },
    "./utils/paths": {
      "import": "./dist/esm/utils/paths/index.js",
      "require": "./dist/cjs/utils/paths/index.cjs"
    }
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "node-fetch": "^3.3.0"
  },
  "peerDependencies": {
    "electron": ">=25.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "rollup": "^2.79.2"
  }
}
