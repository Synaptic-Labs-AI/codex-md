{
  "name": "codex-md",
  "version": "1.0.0",
  "description": "Desktop application for converting various file types to Markdown for codex.md",
  "main": "src/electron/main.js",
  "type": "commonjs",
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "start": "electron .",
    "dev": "npm run build:shared && cross-env NODE_ENV=development concurrently \"npm run dev:svelte\" \"npm run dev:electron\"",
    "dev:svelte": "cd frontend && npm run dev",
    "dev:electron": "electron-forge start",
    "build": "npm run build:shared && npm run build:svelte && npm run build:electron",
    "build:shared": "cd shared && npm run build",
    "build:svelte": "cd frontend && npm run build",
    "build:electron": "electron-builder",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "lint": "eslint src/electron"
  },
    "build": {
        "appId": "com.codexmd.app",
        "productName": "codex.md",
        "directories": {
            "output": "dist"
        },
        "publish": [{
            "provider": "github",
            "owner": "Synaptic-Labs-AI",
            "repo": "codex-md"
        }],
        "files": [
            "src/electron/**/*",
            "frontend/build/**/*",
            "backend/dist/**/*",
            "shared/dist/**/*",
            "package.json"
        ],
        "afterPack": "./scripts/afterPack.js",
        "extraResources": [
            {
                "from": "node_modules/@ffmpeg-installer/win32-x64/ffmpeg.exe",
                "to": "ffmpeg.exe",
                "platform": "win32"
            },
            {
                "from": "node_modules/@ffmpeg-installer/darwin-x64/ffmpeg",
                "to": "ffmpeg",
                "platform": "darwin"
            },
            {
                "from": "node_modules/@ffmpeg-installer/linux-x64/ffmpeg",
                "to": "ffmpeg",
                "platform": "linux"
            }
        ],
        "win": {
            "target": ["nsis"],
            "icon": "frontend/static/logo.png",
            "extraResources": [
                {
                    "from": "node_modules/@ffmpeg-installer/win32-x64/ffmpeg.exe",
                    "to": "ffmpeg.exe"
                }
            ]
        },
        "mac": {
            "target": ["dmg"],
            "icon": "frontend/static/logo.png",
            "extraResources": [
                {
                    "from": "node_modules/@ffmpeg-installer/darwin-x64/ffmpeg",
                    "to": "ffmpeg"
                }
            ],
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "entitlements": "build/entitlements.mac.plist",
            "entitlementsInherit": "build/entitlements.mac.plist"
        },
        "linux": {
            "target": ["AppImage"],
            "icon": "frontend/static/logo.png",
            "extraResources": [
                {
                    "from": "node_modules/@ffmpeg-installer/linux-x64/ffmpeg",
                    "to": "ffmpeg"
                }
            ],
            "category": "Utility"
        }
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "codexmd"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@cliqz/adblocker-puppeteer": "^1.34.0",
    "@codex-md/shared": "file:shared",
    "@duckduckgo/autoconsent": "^1.0.8",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@mistralai/mistralai": "^1.2.0",
    "chokidar": "^4.0.3",
    "cross-fetch": "^4.1.0",
    "crypto": "^1.0.1",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "ffmpeg-static": "^5.2.0",
    "ffprobe": "^1.1.2",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "form-data": "^4.0.0",
    "fs-extra": "^11.2.0",
    "node-fetch": "^2.7.0",
    "node-machine-id": "^1.1.12",
    "openai": "^4.28.0",
    "pdf-parse": "^1.1.1",
    "proper-lockfile": "^4.1.2",
    "puppeteer": "^23.11.1",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-devtools-installer": "^3.2.0",
    "electron-reloader": "^1.2.3",
    "eslint": "^8.56.0",
    "eslint-plugin-electron": "^7.0.0"
  }
}
