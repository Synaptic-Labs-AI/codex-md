{
    "name": "codex-md",
    "version": "1.0.0",
    "description": "Desktop application for converting various file types to Markdown for codex.md",
    "main": "src/electron/main.js",
    "type": "commonjs",
    "workspaces": [
        "frontend"
    ],
    "scripts": {
        "verify-deps": "node scripts/verify-dependencies.js",
        "dev:svelte": "cd frontend && npm run dev",
        "build:svelte": "cd frontend && npm run build",
        "prebuild:electron": "node scripts/verify-dependencies.js && node scripts/cleanup-resources.js && node scripts/copy-static-assets.js",
        "optimize-build": "node scripts/optimize-build.js",
        "convert-icons": "node scripts/convert-icons.js",
        "package": "electron-forge package",
        "make": "npm run prebuild:electron && npm run optimize-build && npm run convert-icons && electron-builder --win",
        "lint": "eslint src/electron",
        "start": "electron-forge start",
        "dev": "npm run start:dev",
        "start:dev": "concurrently \"npm run dev:electron\" \"npm run dev:frontend\"",
        "build": "npm run build:all",
        "build:all": "npm run build:frontend && npm run build:electron",
        "dev:electron": "electron-forge start",
        "dev:frontend": "cd frontend && npm run dev",
        "build:frontend": "cd frontend && npm run build",
        "build:electron": "npm run prebuild:electron && npm run optimize-build && npm run convert-icons && electron-builder build",
        "test": "npm run test:all",
        "test:all": "npm run test:e2e && npm run test:unit",
        "test:e2e": "playwright test",
        "test:unit": "jest",
        "kill-process": "node scripts/kill-process.js",
        "clean-rebuild": "npm run kill-process && npm run build:frontend && npm run prebuild:electron && npm run optimize-build && npm run convert-icons && electron-builder --win && cd dist\\win-unpacked && .\\codex.md.exe --trace-warnings",
        "debug:rebuild": "npm run build:frontend && npm run prebuild:electron && npm run optimize-build && npm run convert-icons && electron-builder --win && cd dist\\win-unpacked && .\\codex.md.exe --trace-warnings",
        "debug:verbose": "npm run build:frontend && npm run prebuild:electron && npm run optimize-build && npm run convert-icons && electron-builder --win && cd dist\\win-unpacked && .\\codex.md.exe --trace-warnings --verbose",
        "debug:log": "npm run build:frontend && npm run prebuild:electron && npm run optimize-build && npm run convert-icons && electron-builder --win && node scripts/run-with-log.js",
        "clean-log": "npm run kill-process && npm run build:frontend && npm run prebuild:electron && npm run optimize-build && npm run convert-icons && electron-builder --win && node scripts/run-with-log.js"
    },
    "build": {
        "appId": "com.codexmd.app",
        "productName": "codex.md",
        "directories": {
            "output": "dist"
        },
        "publish": [
            {
                "provider": "github",
                "owner": "Synaptic-Labs-AI",
                "repo": "codex-md"
            }
        ],
        "afterPack": "./scripts/afterPack.js",
        "asar": true,
        "asarUnpack": [
            "node_modules/@ffmpeg-installer/**/*",
            "node_modules/puppeteer/**/*",
            "node_modules/fluent-ffmpeg/**/*",
            "node_modules/ffprobe/**/*",
            "node_modules/ffprobe-static/**/*"
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "build/icons/icon.ico",
            "artifactName": "${productName}-Setup-${version}.${ext}"
        },
        "nsis": {
            "oneClick": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "codex.md",
            "installerIcon": "build/icons/icon.ico",
            "uninstallerIcon": "build/icons/icon.ico",
            "installerHeaderIcon": "build/icons/icon.ico",
            "deleteAppDataOnUninstall": true
        },
        "protocols": {
            "name": "codex-md",
            "schemes": [
                "codex-md"
            ]
        },
        "files": [
            "src/electron/**/*",
            "frontend/dist/**/*",
            "node_modules/**/*",
            "!node_modules/.bin/**/*",
            "!node_modules/*/test/**/*",
            "!node_modules/*/tests/**/*",
            "!node_modules/*/docs/**/*",
            "!node_modules/*/examples/**/*",
            "!node_modules/*/demo/**/*",
            "!node_modules/*/dist/docs/**/*",
            "!node_modules/*/dist/demo/**/*",
            "!node_modules/*/dist/examples/**/*"
        ],
        "extraResources": [
            {
                "from": "frontend/dist",
                "to": "frontend/dist",
                "filter": [
                    "**/*"
                ]
            },
            {
                "from": "frontend/static",
                "to": "static",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "extraFiles": [
            {
                "from": "node_modules/@ffmpeg-installer/win32-x64/ffmpeg.exe",
                "to": "resources/ffmpeg.exe"
            }
        ]
    },
    "config": {
        "forge": {
            "packagerConfig": {
                "asar": true
            },
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "codexmd"
                    }
                }
            ]
        }
    },
    "author": {
        "name": "Synaptic Labs",
        "url": "https://www.synapticlabs.ai"
    },
    "license": "MIT",
    "dependencies": {
        "@bundled-es-modules/pdfjs-dist": "^3.6.172-alpha.1",
        "@cliqz/adblocker-puppeteer": "^1.34.0",
        "@duckduckgo/autoconsent": "^1.0.8",
        "@ffmpeg-installer/ffmpeg": "^1.1.0",
        "@iarna/rtf-to-html": "^1.1.0",
        "@mistralai/mistralai": "^1.2.0",
        "@sec-ant/readable-stream": "^0.6.0",
        "@smui/button": "7.0.0",
        "@smui/linear-progress": "7.0.0",
        "@smui/textfield": "7.0.0",
        "@squoosh/lib": "^0.3.1",
        "axios": "^1.7.7",
        "axios-retry": "^3.8.0",
        "cheerio": "^1.0.0",
        "chokidar": "^4.0.3",
        "colorette": "^2.0.20",
        "cross-fetch": "^4.1.0",
        "crypto": "^1.0.1",
        "csv-parse": "^5.6.0",
        "defer-to-connect": "^2.0.1",
        "electron-squirrel-startup": "^1.0.0",
        "electron-store": "^8.1.0",
        "electron-updater": "^6.1.7",
        "ffmpeg-static": "^5.2.0",
        "ffprobe": "^1.1.2",
        "ffprobe-static": "^3.1.0",
        "file-type": "^19.6.0",
        "fluent-ffmpeg": "^2.1.3",
        "form-data": "^4.0.0",
        "formdata-node": "^6.0.3",
        "formdata-polyfill": "^4.0.10",
        "fs-extra": "^11.2.0",
        "got": "^14.4.6",
        "jszip": "^3.10.1",
        "mammoth": "^1.9.0",
        "node-fetch": "^3.3.2",
        "node-machine-id": "^1.1.12",
        "node-cache": "^5.1.2",
        "office-text-extractor": "^3.0.3",
        "officeparser": "^5.0.0",
        "openai": "^4.28.0",
        "p-limit": "^3.1.0",
        "pdf-lib": "^1.17.1",
        "pdf-parse": "^1.1.1",
        "proper-lockfile": "^4.1.2",
        "puppeteer": "^23.11.1",
        "puppeteer-extra": "^3.3.6",
        "puppeteer-extra-plugin-stealth": "^2.11.2",
        "quick-lru": "^7.0.0",
        "sanitize-filename": "^1.6.3",
        "svelte-spinner": "^2.0.2",
        "turndown": "^7.2.0",
        "tmp-promise": "^3.0.3",
        "uuid": "^9.0.1",
        "xlsx": "^0.20.2",
        "xml2js": "^0.6.2",
        "yaml": "^2.2.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.14.8",
        "@babel/core": "^7.15.0",
        "@babel/preset-env": "^7.15.0",
        "@electron-forge/cli": "^7.2.0",
        "@electron-forge/maker-squirrel": "^7.2.0",
        "@electron-forge/maker-zip": "^7.2.0",
        "concurrently": "^8.0.0",
        "cross-env": "^7.0.3",
        "dotenv": "^16.4.7",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "electron-devtools-installer": "^3.2.0",
        "electron-reloader": "^1.2.3",
        "eslint": "^7.32.0",
        "eslint-plugin-electron": "^7.0.0",
        "husky": "^8.0.0",
        "jsdom": "^25.0.1",
        "lint-staged": "^13.1.0",
        "openai": "^4.77.3",
        "path-browserify": "^1.0.1",
        "png-to-ico": "^2.1.8",
        "sass": "^1.79.4",
        "uuid": "^11.0.4"
    }
}
